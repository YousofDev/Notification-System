{
  "name": "notification-system",
  "version": "1.0.0",
  "description": "Standalone Notification System for microservices, supporting Email and WebSocket notifications.",
  "main": "dist/src/server.js",
  "scripts": {
    "clean": "rimraf dist",
    "build": "pnpm run clean && tsc && tsc-alias",
    "start": "node dist/src/server.js",
    "prod": "pnpm run build && pnpm start",
    "dev": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only ./src/server.ts",
    "test": "set NODE_ENV=test && jest --runInBand --detectOpenHandles",
    "clear_jest": "jest --clearCache",
    "lint": "eslint src/**/*.ts",
    "fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "notification",
    "microservice",
    "email",
    "websocket",
    "rabbitmq",
    "mongodb",
    "typescript",
    "express"
  ],
  "author": "YousofDev",
  "packageManager": "pnpm@10.12.1",
  "dependencies": {
    "amqplib": "^0.10.8",
    "concurrently": "^9.1.2",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.1.0",
    "html-to-text": "^9.0.5",
    "mongo-sanitize": "^1.1.0",
    "mongoose": "^8.15.1",
    "morgan": "^1.10.0",
    "nodemailer": "^7.0.3",
    "rimraf": "^6.0.1",
    "socket.io": "^4.8.1",
    "uuid": "^11.1.0",
    "xss": "^1.0.15",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.7",
    "@types/cors": "^2.8.19",
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.3",
    "@types/html-to-text": "^9.0.4",
    "@types/jest": "^29.5.14",
    "@types/mongo-sanitize": "^1.0.3",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.0.1",
    "@types/nodemailer": "^6.4.17",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^4.4.3",
    "eslint-plugin-prettier": "^5.4.1",
    "jest": "^30.0.0",
    "jest-environment-node": "^30.0.0",
    "prettier": "^3.5.3",
    "supertest": "^7.1.1",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.2",
    "typescript": "^5.8.3"
  }
}
